{
  "common": {
    "requiredFields": {
      "info": ["code", "context"],
      "warn": ["code", "context", "reason"],
      "error": ["code", "context", "error"]
    },
    "redactFields": [
      "metadata.user.password",
      "metadata.user.ssn",
      "metadata.secretKey"
    ]
  },
  "loggers": {
    "validationLogger": {
      "category": "validation",
      "customRequiredFields": {
        "warn": ["code", "context", "customAction"],
        "error": ["code", "context", "validationStep"]
      }
    },
    "authLogger": {
      "category": "authentication",
      "customRequiredFields": {
        "error": ["code", "context", "authMethod"]
      }
    },
    "systemLogger": {
      "category": "system",
      "customRequiredFields": {
        "fatal": ["code", "context", "serviceName"]
      },
      "redactFields": ["metadata.config.apiKey", "metadata.config.authToken"]
    },
    "usageLogger": {
      "category": "usage"
    }
  }
}
